{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "build/dist",
		"module": "esnext",
		"target": "esnext",
		"lib": [ "esnext", "dom", "DOM.Iterable" ],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": false,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"~/backend/*": [ "./assets/backend/*" ],
			"~/frontend/*": [ "./assets/frontend/*" ],
			"~/blocks/*": [ "./assets/gutenberg/blocks/*" ],
			"~/images/*": [ "./assets/images/*" ],
			"global.module.css": [ "./assets/styles/global.module.css" ]
		}
	},
	"include": [ "assets/**/*", "index.d.ts", "global.d.ts" ],
	"exclude": [ "node_modules", "build", "vendor" ]
}
