{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "build/dist",
		"module": "esnext",
		"target": "esnext",
		"lib": [ "esnext", "dom" ],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": false,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"paths": {
			"~/*": [ "./assets/scripts/*" ],
			"global.module.css": [ "./assets/styles/global.module.css" ]
		}
	},
	"exclude": [ "node_modules", "build", "vendor" ]
}
