{
	"name": "wpappointments",
	"description": "WordPress Appointments",
	"version": "0.0.1",
	"author": "Appsy sp. z o.o.",
	"files": [
		"src",
		"build",
		"assets",
		"vendor",
		"wpappointments.php",
		"readme.txt"
	],
	"scripts": {
		"build": "wp-scripts build assets/scripts/react/admin.tsx",
		"start": "wp-env start && wp-scripts start assets/scripts/react/admin.tsx",
		"format": "wp-scripts format",
		"lint": "pnpm lint:js && pnpm lint:css",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:fix": "pnpm phpcs-fix -p && pnpm format",
		"lint:staged": "lint-staged",
		"plugin-zip": "pnpm build && pnpm composer install --no-dev && wp-scripts plugin-zip && pnpm composer install",
		"phpcs": "wp-env run tests-cli --env-cwd=wp-content/plugins/wpappointments ./vendor/bin/phpcs src wpappointments.php",
		"phpcs-fix": "wp-env run tests-cli --env-cwd=wp-content/plugins/wpappointments ./vendor/bin/phpcbf src wpappointments.php",
		"readme": "wp-env run tests-cli --env-cwd=wp-content/plugins/wpappointments ./vendor/bin/wp2md -i readme.txt -o README.md",
		"prepare": "husky install && composer install",
		"init": "NODE_ENV=development pnpm install",
		"wp-env": "wp-env",
		"stop": "wp-env stop",
		"clean": "wp-env clean all",
		"composer": "wp-env run cli --env-cwd=wp-content/plugins/wpappointments composer",
		"activate-plugin": "wp-env run cli --env-cwd=wp-content/plugins/wpappointments wp plugin activate wpappointments",
		"after-start": "pnpm composer install && pnpm activate-plugin",
		"test": "pnpm test-php && pnpm test-wp",
		"test-php": "wp-env run tests-cli --env-cwd=wp-content/plugins/wpappointments ./vendor/bin/pest --configuration phpunit-php.xml",
		"test-wp": "wp-env run tests-cli --env-cwd=wp-content/plugins/wpappointments ./vendor/bin/pest --configuration phpunit-wp.xml"
	},
	"devDependencies": {
		"@types/react": "^18.2.21",
		"@types/react-dom": "^18.2.7",
		"@wordpress/env": "^8.7.0",
		"@wordpress/prettier-config": "^2.24.0",
		"@wordpress/scripts": "^26.11.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"prettier": "npm:wp-prettier@2.8.5"
	},
	"dependencies": {
		"@wordpress/api-fetch": "^6.38.0",
		"@wordpress/components": "^25.6.0",
		"@wordpress/data": "^9.11.0",
		"@wordpress/hooks": "^3.40.0",
		"@wordpress/i18n": "^4.41.0",
		"immer": "^10.0.2",
		"obj-str": "^1.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-hook-form": "^7.46.1"
	}
}
