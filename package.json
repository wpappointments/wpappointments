{
	"name": "root",
	"private": true,
	"scripts": {
		"build": "lerna run build",
		"dev": "pnpm start && pnpm -C plugins/wpappointments dev:hot",
		"start": "pnpm run start:wp && pnpm run start:mailhog",
		"start:wp": "wp-env start --xdebug=develop,coverage,debug",
		"start:mailhog": "bash .scripts/mailhog start",
		"stop": "wp-env stop",
		"clean": "wp-env clean all",
		"test": "wp-env run tests-cli --env-cwd=wp-content/wpappointments ./vendor/bin/pest --coverage --coverage-html coverage",
		"lint:staged": "lint-staged",
		"lint:js": "wp-scripts lint-js .",
		"lint:php": "wp-env run-cli --env-cwd=wp-content/wpappointments ./vendor/bin/phpcs",
		"format": "npm run format:js && npm run format:php",
		"format:js": "wp-scripts format .",
		"format:php": "wp-env run cli --env-cwd=wp-content/wpappointments bash ./.husky/phpcbf tools plugins",
		"env": "wp-env",
		"lerna": "lerna",
		"prepare": "husky"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@wordpress/env": "^9.8.0",
		"@wordpress/prettier-config": "^3.13.0",
		"@wordpress/scripts": "^27.7.0",
		"husky": "^9.0.11",
		"lerna": "^8.1.2",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"typescript": "^5.3.3",
		"wp-prettier": "^3.0.3"
	}
}
