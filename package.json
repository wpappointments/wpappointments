{
	"name": "root",
	"private": true,
	"scripts": {
		"open": "bash .scripts/open",
		"build": "lerna run build",
		"dev": "pnpm start && pnpm -C plugins/wpappointments dev:hot",
		"start": "pnpm run start:wp && pnpm run start:mailhog",
		"start:wp": "wp-env start --xdebug=develop,coverage,debug",
		"start:mailhog": "bash .scripts/mailhog start",
		"stop": "pnpm run stop:wp && pnpm run stop:mailhog",
		"stop:wp": "wp-env stop",
		"stop:mailhog": "bash .scripts/mailhog stop",
		"clean": "wp-env clean all",
		"lint:staged": "lint-staged --concurrent=false",
		"lint": "pnpm run lint:js && pnpm run lint:php",
		"lint:js": "wp-scripts lint-js .",
		"lint:php": "pnpm run phpcs tools plugins/wpappointments",
		"format": "pnpm run format:js && npm run format:php",
		"format:js": "wp-scripts format .",
		"format:php": "pnpm run phpcbf tools plugins/wpappointments",
		"phpcs": "wp-env run cli --env-cwd=wp-content ./vendor/bin/phpcs",
		"phpcbf": "wp-env run cli --env-cwd=wp-content bash ./.husky/phpcbf",
		"env": "wp-env",
		"lerna": "lerna",
		"prepare": "pnpm install && husky",
		"check-types": "lerna run check-types",
		"dump-autoload": "wp-env run cli --env-cwd=wp-content composer dump-autoload && wp-env run cli --env-cwd=wp-content/plugins/wpappointments composer dump-autoload",
		"test": "wp-env run tests-cli --env-cwd=wp-content ./vendor/bin/pest --coverage --coverage-html coverage"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@wordpress/env": "^9.8.0",
		"@wordpress/prettier-config": "^3.13.0",
		"@wordpress/scripts": "^27.7.0",
		"husky": "^9.0.11",
		"lerna": "^8.1.2",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"typescript": "^5.3.3",
		"wp-prettier": "^3.0.3"
	}
}
